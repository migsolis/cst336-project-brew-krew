<%- include('partials/header.ejs') %>

		<section class="login-box">
			<h2 class="center-txt">Control Panel</h2>
			<hr>
			<div class="form-box-admin flex-admin-col">
				<div class="flex-share"><a href="cpanel"><- Go Back</a></div>
				<div class="flex-admin">
					<div style="margin: 0 auto;">
						<h3>Add an item to the database</h3>
						
							Item name<br>
							<input type="text" name="c-itemName" id="c-itemName" style="width: 250px;">
							<br><br>
							
							New item price<br>
							<input type="text" name="c-itemPrice"  id="c-itemPrice"style="width: 250px;" placeholder="0.00" pattern="^\d*(\.\d{0,2})?$">
							<br>
							<div id="a-itemPrice"></div>
							<br>
							New item category<br>
							<select name="c-itemCat" id="c-itemCat">
								<option value="">Choose category</option>
								<option value="1">Espresso beverage</option>
								<option value="2">Brewed coffee</option>
								<option value="3">Cold brew</option>
								<option value="4">Hot coffee</option>
								<option value="5">Hot tea</option>
								<option value="6">Iced tea</option>
								<option value="7">Cold drink</option>
								<option value="8">Lunch</option>
								<option value="9">Breakfast</option>
							</select>
							<br>
							<!-- Display information about success or failure of attempts to modify database -->
							<div id="add-msg-info"></div>
							<br>
							<!--<button>Add item</button>-->
							<button type="submit" class="insertitems" id="insertitems">Add Item</button>
						
						<br>
					</div>	
				</div>				
				
			</div>
			
			


		</section>

